<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <ApplicationIcon>Icon.ico</ApplicationIcon>
    <AssemblyName>PixelVision8</AssemblyName>
    <RootNamespace>PixelVision8</RootNamespace>
    <Version>1.9.8</Version>
    <PackageId>PixelVision8</PackageId>
    <PackageIcon>Icon.png</PackageIcon>
    <Copyright>Jesse Freeman 2020</Copyright>
    <UseAppHost>true</UseAppHost>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Content\bios.json" />
    <None Remove="Content\PixelVisionOS\Tools\ColorTool\**" />
    <None Remove="Content\PixelVisionOS\Tools\SpriteTool\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Icon.ico">
      <LogicalName>Icon.ico</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icon.bmp">
      <LogicalName>Icon.bmp</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icon.icns">
      <LogicalName>Icon.icns</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Remove="Content\PixelVisionOS\Tools\ColorTool\**" />
    <EmbeddedResource Remove="Content\PixelVisionOS\Tools\SpriteTool\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Content\bios.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\..\Effects\*.*">
      <Link>Content\Effects\%(FileName)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\..\Disks\RunnerTools\**\*.*">
      <Link>Content\PixelVisionOS\Tools\%(RecursiveDir)%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\..\Disks\PixelVisionOS\System\**\*.*">
      <Link>Content\PixelVisionOS\%(RecursiveDir)%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\..\Disks\PixelVisionOS\README.txt">
      <Link>Content\PixelVisionOS\README.txt</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\SDK\Editor\**\*.cs">
      <Link>SDK\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
    <Compile Include="..\..\SDK\Engine\**\*.cs">
      <Link>SDK\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
    <Compile Include="..\..\SDK\Lua\**\*.cs">
      <Link>SDK\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
    <Compile Include="..\..\SDK\Runner\**\*.cs">
      <Link>SDK\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
    <Compile Include="..\..\SDK\Workspace\**\*.cs">
      <Link>SDK\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Content Remove="..\..\Effects\crt-lottes-mg.fx" />
    <Content Remove="..\..\Effects\crt-lottes-mg.ogl.mgfxc" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ICSharpCode.SharpZipLib.dll" Version="0.85.4.369" />
    <PackageReference Include="MoonSharp" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\MonoGame\MonoGame.Framework\MonoGame.Framework.DesktopGL.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="..\..\Effects\QuickDraw.fx">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Update="..\..\Effects\QuickDrawBytes.fx">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
